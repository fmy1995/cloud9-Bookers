<h1>Books</h1>

<table>
<th>Title</th> <th>Body</th>
<th  colspan = "3" ></th>

<% @books.each do |obj| %>

<tr>
 <td><a><%= obj.title %></a></td>
 <td><a><%= obj.body %></a></td>

 <td><a href="/books/<%= obj.id %>">Show
 </a></td>
 <td><a href="/books/<%= obj.id %>/edit/">Edit
 </a></td>
 <td><a rel="nofollow" data-method="delete" href="/books/<%= obj.id %>">Destroy
 </a></td>

<% end %>
</tr>
</table>

<h2>New book</h2>
<%= form_with model: @book, local: true do |f| %>

<% if flash[:alert] %>
 <div id="error_explanation">
 <h2> < >errors prohibited this book from being saved:</h2>
  <ul>
  <li><p1>Title can't be blank</p1></li>
  <li><p1>Body can't be blank</p1></li>
  </ul>
</div>
<% end %>

<div class = "field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class = "field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
  
<div class = "field">
  <%= f.submit 'Create Book' %>
</div>
<% end %>