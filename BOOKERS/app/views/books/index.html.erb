<h1>Books</h1>

<table>
<th>Title</th> <th>Body</th>
<th  colspan = "3" ></th>

<% @books.each do |book| %>

<tr>
 <td><a><%= book.title %></a></td>
 <td><a><%= book.body %></a></td>

 <td><a href="/books/<%= book.id %>">Show
 </a></td>
 <td><a href="/books/<%= book.id %>/edit/">Edit
 </a></td>
 <td><a href="/books/<%= book.id %>" data-method="delete">Destroy
 </a></td>

<% end %>
</tr>
</table>

<h2>New book</h2>

<% @book.errors.full_messages.each do |message| %>
<div id="error_explanation"> 
 <p2>This error prohibited this book from being saved:</p2>
 <li><%= message %></li></div>
<% end %>

<%= form_with model: @book, local: true do |f| %>

<div class = "field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class = "field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>

<div class = "field">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
